<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Thème par défaut de l'application -->
    <style name="NextInpactTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Thème de l'action Bar -->
        <item name="android:actionBarStyle" tools:targetApi="11">@style/NextInpactActionBar_clair
        </item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/NextInpactActionBar_clair</item>

        <!-- Mes familles de style : liaison nom / style -->
        <item name="themeBanniereFond">@style/BanniereFond_clair</item>
        <item name="themeSection">@style/Section_clair</item>
        <item name="themeListeArticleFond">@style/ListeArticleFond_clair</item>
        <item name="themeListeArticleTitre">@style/ListeArticleTitre_clair</item>
        <item name="themeListeArticleHeure">@style/ListeArticleHeure_all</item>
        <item name="themeListeArticleSousTitre">@style/ListeArticleSousTitre_clair</item>
        <item name="themeListeArticleNbComs">@style/ListeArticleNbComs_clair</item>
        <item name="themeArticleFond">@style/ArticleFond_clair</item>
        <item name="themeArticleTexte">@style/ArticleTexte_clair</item>
        <item name="themeCommentaireBandeauFond">@style/CommentaireBandeauFond_clair</item>
        <item name="themeCommentaireBandeauTitre">@style/CommentaireBandeauTitre_all</item>
        <item name="themeCommentaireNumero">@style/CommentaireNumero_all</item>
        <item name="themeCommentaireTexte">@style/CommentaireTexte_clair</item>
    </style>

    <!-- Thème foncé de l'application -->
    <style name="NextInpactThemeFonce" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Thème de l'action Bar -->
        <item name="android:actionBarStyle" tools:targetApi="11">@style/NextInpactActionBar_fonce
        </item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/NextInpactActionBar_fonce</item>

        <!-- Mes familles de style : liaison nom / style -->
        <item name="themeBanniereFond">@style/BanniereFond_fonce</item>
        <item name="themeSection">@style/Section_fonce</item>
        <item name="themeListeArticleFond">@style/ListeArticleFond_fonce</item>
        <item name="themeListeArticleTitre">@style/ListeArticleTitre_fonce</item>
        <item name="themeListeArticleHeure">@style/ListeArticleHeure_all</item>
        <item name="themeListeArticleSousTitre">@style/ListeArticleSousTitre_fonce</item>
        <item name="themeListeArticleNbComs">@style/ListeArticleNbComs_fonce</item>
        <item name="themeArticleFond">@style/ArticleFond_fonce</item>
        <item name="themeArticleTexte">@style/ArticleTexte_fonce</item>
        <item name="themeCommentaireBandeauFond">@style/CommentaireBandeauFond_fonce</item>
        <item name="themeCommentaireBandeauTitre">@style/CommentaireBandeauTitre_all</item>
        <item name="themeCommentaireNumero">@style/CommentaireNumero_all</item>
        <item name="themeCommentaireTexte">@style/CommentaireTexte_fonce</item>
    </style>


    <!-- ActionBar styles -->
    <style name="NextInpactActionBar_clair" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Image de fond -->
        <item name="android:background">#064358</item>
        <!-- Support library compatibility -->
        <item name="background">@color/banniereFond</item>
    </style>

    <style name="NextInpactActionBar_fonce" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Image de fond -->
        <item name="android:background">#064358</item>
        <!-- Support library compatibility -->
        <item name="background">@color/banniereFond</item>
    </style>

    <!-- Taille de texte personalisée -->
    <style name="textAppearanceMicro" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

