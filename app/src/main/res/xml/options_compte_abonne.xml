<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Compte abonnÃ© -->
    <PreferenceCategory app:title="@string/optionsAbonne">
        <SwitchPreferenceCompat
            app:defaultValue="@bool/defautOptionAbonne"
            app:key="@string/idOptionAbonne"
            app:summary="@string/optionAbonneDisclaimer" />
        <EditTextPreference
            app:defaultValue="@string/defautOptionLogin"
            app:dependency="@string/idOptionAbonne"
            app:key="@string/idOptionLogin"
            app:summary="@string/optionLoginDetail"
            app:title="@string/optionLogin" />
        <EditTextPreference
            app:defaultValue="@string/defautOptionPassword"
            app:dependency="@string/idOptionAbonne"
            app:key="@string/idOptionPassword"
            app:summary="@string/optionPasswordDetail"
            app:title="@string/optionPassword" />
    </PreferenceCategory>
</PreferenceScreen>